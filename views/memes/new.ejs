<%- include("../partials/header") %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col border p-2 col-11 col-sm-10 col-md-9 col-lg-7">
            <h1 class="mb-4">Post a New Meme</h1>

            <form action="/memes" method="POST" class="mb-2">
                <div class="form-group">
                    <label>Post Name</label>
                    <input class="form-control" type="text" name="name" placeholder="Name of Post" required>
                </div>
                <div class="form-group">
                    <label>Level of Offensiveness</label>
                    <input class="form-control" type="number" name="low" placeholder="Level of Offensiveness" min="0" step="1" required>
                </div>
                <div class="form-group">
                    <label>Image URL</label>
                    <input class="form-control" type="text" name="image" placeholder="Image URL [optional but recommended]">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea class="form-control" rows="5" name="description" placeholder="Go wild, but not TOO wild..." required></textarea>
                </div>
                <button type="submit" class="btn btn-lg btn-primary">Submit</button>
            </form>
            <a href="/memes">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>