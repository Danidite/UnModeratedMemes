<%- include("../partials/header") %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col border p-2 col-11 col-sm-10 col-md-9 col-lg-7">
            <h1 class="mb-4 text-center">Edit Comment</h1>

            <form action="/memes/<%= meme_id %>/comments/<%= comment._id %>?_method=PUT" method="POST" class="mb-2">
                <div class="form-group">
                    <label>Rating (On a scale of 1 to 10)</label>
                    <input class="form-control" type="number" name="comment[rating]" value="<%= comment.rating %>" placeholder="Rating" max="10" min="1" step="0.5">
                </div>
                <div class="form-group">
                    <label>Comment</label>
                    <textarea class="form-control" rows="5" name="comment[text]" placeholder="Comment..." required><%= comment.text %></textarea>
                </div>
                <button type="submit" class="btn btn-lg btn-primary">Submit</button>
            </form>
            <a href="/memes/<%= meme_id %>">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>